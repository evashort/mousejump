                            <MenuFlyoutSeparator Visibility="{x:Bind SeparatorVisibility}" Margin="0,0,0,10" IsTabStop="False"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <PathIcon Data="{x:Bind PathData}" Grid.Column="0" Margin="0,0,4,0"/>
                                <TextBlock Text="{x:Bind Name}" Grid.Column="1" Margin="0,0,4,0"/>
                                <TextBlock Text="{x:Bind Weight}" Grid.Column="2" HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </TreeViewItem>
                </DataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2">
            <NumberBox Value="{x:Bind Path=Priority, Mode=TwoWay}" Header="Priority" SpinButtonPlacementMode="Inline"/>
            <NumberBox Value="{x:Bind Path=Weight, Mode=TwoWay}" Header="Weight" SpinButtonPlacementMode="Hidden"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2">
            <TextBox Text="positive"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="1">
            <ComboBox Header="List to filter" SelectedIndex="0">
