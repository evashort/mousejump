            <ColumnDefinition Width="1*" MaxWidth="300"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" HorizontalScrollMode="Enabled">
            <StackPanel>
                <StackPanel.Resources>
                    <CollectionViewSource x:Name="labelListSource" IsSourceGrouped="True" Source="{x:Bind LabelLists, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel.Resources>
                <StackPanel Margin="12,12,0,12">
                    <ComboBox Header="Label source" SelectedIndex="0" Margin="12">
                        <ComboBoxItem Content="main"/>
                        <ComboBoxItem Content="letters"/>
                        <ComboBoxItem Content="numbers"/>
                        <ComboBoxItem Content="unused"/>
                    </ComboBox>
                    <ToggleSwitch Header="Match case" Margin="12"></ToggleSwitch>
                    <Button Margin="12">
                        <StackPanel Orientation="Horizontal">
                            <PathIcon Data="{x:Bind local:IconPaths.New}" Margin="0,0,12,0"/>
                            <TextBlock Text="New list"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                <ListView SelectedItem="{x:Bind Selected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding Source={StaticResource labelListSource}}" Margin="0,0,12,24">
                    <ListView.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Key.Name}"/>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ListView.GroupStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <PathIcon Data="{Binding IconPath}" Margin="0,0,12,0"/>
                                <TextBlock Text="{Binding Title}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </ScrollViewer>
